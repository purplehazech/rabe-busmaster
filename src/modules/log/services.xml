<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <services>
    <service id="logger" class="Log" factory-class="Log" factory-method="factory">
      <argument>composite</argument>
      <call method="addChild">
          <argument type="service" id="logger.console"/>
      </call>
      <call method="addChild">
          <argument type="service" id="logger.syslog"/>
      </call>
    </service>
    <service id="logger.console" class="Log" factory-class="Log" factory-method="factory">
      <argument>console</argument>
    </service>
    <service id="logger.syslog" class="Log" factory-class="Log" factory-method="factory">
      <argument>syslog</argument>
    </service>
  </services>
</container>

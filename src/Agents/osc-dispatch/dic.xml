<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <services>
    <service id="oscDispatch.pollZmq" class="ZMQContext"/>

    <service id="oscDispatch.poll" class="ZMQPoll">
      <call method="add">
        <argument type="service" id="oscDispatch.poll.socketWork"/>
        <!-- ZMQ::POLL_IN -->
        <argument>1</argument> 
      </call>
    </service>

    <service id="oscDispatch.poll.socketWork" class="ZMQSocket" factory-service="oscDispatch.pollZmq" factory-method="getSocket">
      <!-- ZMQ::SOCKET_PULL -->
      <argument>7</argument>
      <call method="setSockOpt">
        <!-- ZMQ::SOCKOPT_HWM -->
        <argument>1</argument>
        <argument>1</argument>
      </call>
      <call method="connect">
        <argument>ipc:///tmp/osc-dispatch.poll.socket-work</argument>
      </call>
    </service>

    <service id="oscDispatch.pollCtrl" class="ZMQSocket" factory-service="oscDispatch.pollZmq" factory-method="getSocket">
      <!-- ZMQ::SOCKET_PULL -->
      <argument>7</argument>
      <call method="setSockOpt">
        <!-- ZMQ::SOCKOPT_HWM -->
        <argument>1</argument>
        <argument>1</argument>
      </call>
      <call method="connect">
        <argument>ipc:///tmp/osc-dispatch.poll.socket-ctrl</argument>
      </call>
    </service>


    <service id="logger" class="Log" factory-class="Log" factory-method="factory">
      <argument>file</argument>
      <argument>/var/log/busmaster.log</argument>
      <argument>BUSMASTER</argument>
    </service>
  </services>
</container>
